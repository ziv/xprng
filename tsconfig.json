/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "@xprng/code": [
        "./dist/xprng/code"
      ],
      "@xprng/common": [
        "./dist/xprng/common"
      ],
      "@xprng/components": [
        "./dist/xprng/components"
      ],
      "@xprng/highlighter": [
        "./dist/xprng/highlighter"
      ],
      "@xprng/markdown": [
        "./dist/xprng/markdown"
      ],
      "@xprng/styles": [
        "./dist/xprng/styles"
      ]
    },
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./xprng/markdown/tsconfig.lib.json"
    },
    {
      "path": "./xprng/markdown/tsconfig.spec.json"
    },
    {
      "path": "./xprng/example/tsconfig.app.json"
    },
    {
      "path": "./xprng/example/tsconfig.spec.json"
    },
    {
      "path": "./xprng/code1/tsconfig.lib.json"
    },
    {
      "path": "./xprng/code1/tsconfig.spec.json"
    },
    {
      "path": "./packages/xprng/components/tsconfig.lib.json"
    },
    {
      "path": "./packages/xprng/components/tsconfig.spec.json"
    },
    {
      "path": "./packages/xprng/styles/tsconfig.lib.json"
    },
    {
      "path": "./packages/xprng/styles/tsconfig.spec.json"
    },
    {
      "path": "./xprng/common/tsconfig.lib.json"
    },
    {
      "path": "./xprng/common/tsconfig.spec.json"
    },
    {
      "path": "./xprng/code/tsconfig.lib.json"
    },
    {
      "path": "./xprng/code/tsconfig.spec.json"
    }
  ]
}
