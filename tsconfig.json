/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "paths": {
      "@xprng/code": [
        "./dist/xprng/code"
      ],
      "@xprng/code/*": [
        "./dist/xprng/code/*"
      ],
      "@xprng/common": [
        "./dist/xprng/common"
      ],
      "@xprng/common/*": [
        "./dist/xprng/common/*"
      ],
      "@xprng/docs": [
        "./dist/xprng/docs"
      ],
      "@xprng/markdown": [
        "./dist/xprng/markdown"
      ],
      "@xprng/markdown/*": [
        "./dist/xprng/markdown/*"
      ],
      "@xprng/slides": [
        "./dist/xprng/slides"
      ],
      "@xprng/slides/*": [
        "./dist/xprng/slides/*"
      ],
      "@xprng/vendor": [
        "./dist/xprng/vendor"
      ],
      "@xprng/vendor/*": [
        "./dist/xprng/vendor/*"
      ]
    },
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./xprng/markdown/tsconfig.lib.json"
    },
    {
      "path": "./xprng/markdown/tsconfig.spec.json"
    },
    {
      "path": "./xprng/common/tsconfig.lib.json"
    },
    {
      "path": "./xprng/common/tsconfig.spec.json"
    },
    {
      "path": "./xprng/code/tsconfig.lib.json"
    },
    {
      "path": "./xprng/code/tsconfig.spec.json"
    },
    {
      "path": "./xprng/vendor/tsconfig.lib.json"
    },
    {
      "path": "./xprng/vendor/tsconfig.spec.json"
    },
    {
      "path": "./xprng/slides/tsconfig.lib.json"
    },
    {
      "path": "./xprng/slides/tsconfig.spec.json"
    },
    {
      "path": "./apps/docs/tsconfig.app.json"
    },
    {
      "path": "./apps/docs/tsconfig.spec.json"
    },
    {
      "path": "./apps/demo/tsconfig.app.json"
    },
    {
      "path": "./apps/demo/tsconfig.spec.json"
    },
    {
      "path": "./xprng/docs/tsconfig.lib.json"
    },
    {
      "path": "./xprng/docs/tsconfig.spec.json"
    }
  ]
}
