{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "xprng",
  "projects": {
    "@xprng/markdown": {
      "projectType": "library",
      "root": "xprng/markdown",
      "sourceRoot": "xprng/markdown/src",
      "prefix": "xpr",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "xprng/markdown/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "xprng/markdown/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "runner": "vitest",
            "tsConfig": "xprng/markdown/tsconfig.spec.json",
            "buildTarget": "::development"
          }
        }
      }
    }
  }
}
